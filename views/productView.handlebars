<div class = "product-container">
        <h2>{{product.name}}</h2>
        <div class="product-img">
            <img src="/images/{{product.filename}}" alt="{{product.description}}">
            <div class="product-description">
                <h3>Product Description</h3>
                <br>
                {{product.description}}
            </div>
        </div>
        <div class="cart-options">
            <button class="custom-button minus-button" id="minus" data-productID="{{product.id}}"><i>-</i></button>
            <span>1</span>
            <button class="custom-button plus-button" id="plus" data-productID="{{product.id}}"><i>+</i></button>
            <span><p> ${{product.price}}</p></span>
            <button class="custom-button" id="add-to-cart"><i>Add to Cart</i></button>
        </div>


        <div class="comment-container">
        <form action=""></form>
            <label for="review"></label>
            <textarea name="review" placeholder="Write a Customer Review" rows="10" cols="100">
            </textarea>
            
        </form>
        </div> 
    </div>
