<div class = "product-container">
        <h2>{{product.name}}</h2>
        <div class="product-img">
            <img src="/images/{{product.filename}}" alt="{{product.description}}">
            <div>
                {{product.description}}
            </div>
        </div>
        <div class="add-to-cart">
            <button id="minus-button" data-productID="{{product.id}}" class="custom-button"><i>-</i></button>
            <span>1</span>
            <button id="plus-button" class="custom-button" data-productID="{{product.id}}"><i>+</i></button>
            <span><p> {{product.price}}</p></span>
            <button class="custom-button"><i>Add to Cart</i></button>
        </div>
        <div class="comment-container">
        <form action=""></form>
            <label for="review"></label>
            <textarea name="review" placeholder="Write a Customer Review" rows="10" cols="100">
            </textarea>
            <button class="custom-button">Submit</button>
        </form>
        </div>
        
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="/js/cartManagement.js"></script>