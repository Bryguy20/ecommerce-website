{{> cart-details }}
{{#each cartItems as |cartItem|}}
{{> cart-details}}
{{/each}}
<button minus>
<span>{{cart.count}} </span>
<button plus>
  {{else}}
  <p>There are no items in your cart.</p>
  {{/if }}
   
  <div class="row">
    <div class="col-md-12">
    {{#if cartItems}}
      <a href="/order" class="btn btn-primary">Checkout</a>
    {{else}}
      <a href="/products" class="btn btn-primary">Shop</a>
    {{/if}}
    </div>
  </div>
</div>
