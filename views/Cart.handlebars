<script src="/js/cart-details.js"></script>
{{#if cart}}
{{#each cart.products as |product|}}
{{> cart-details}}
{{/each}}
  {{else}}
  <p>There are no items in your cart.</p>
  {{/if }}
   
  <div class="row">
    <div class="col-md-12">
    {{#if cartItems}}
      <a href="/order" class="btn btn-primary">Checkout</a>
    {{else}}
      <a href="/products" class="btn btn-primary">Shop</a>
    {{/if}}
    </div>
  </div>
</div>