

{{cart.id}}
{{#if cart.products}}
{{#each cart.products as |product|}}
{{> cart-details}}
{{/each}}
  {{else}}
  <p>There are no items in your cart.</p>
  {{/if }}
   
  <div class="row">
    <div class="col-md-12">
    {{#if cartItems}}
